#!/bin/python3

import math
import os
import random
import re
import sys

def plusMinus(arr):
    i=len(arr)
    p=n=z=0
    for x in arr:
        if x>0:p+=1
        elif x<0:n+=1
        else: z+=1
    print(p/i)
    print(n/i) 
    print(z/i)   


if __name__ == '__main__':
    n = int(input())

    arr = list(map(int, input().rstrip().split()))

    plusMinus(arr)
